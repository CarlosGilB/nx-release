{
  "$schema": "http://json-schema.org/schema",
  "$id": "ConfigureWorkspace",
  "title": "",
  "type": "object",
  "properties": {
    "installDeps": {
      "type": "boolean",
      "description": "Install semantic-release and dependencies",
      "x-prompt": {
        "type": "boolean",
        "message": "\uD83D\uDC0B nx-release: would you like to install semantic-release and the required plugins?"
      },
      "default": true
    },
    "generateReleaseConfig": {
      "type": "boolean",
      "description": "Generate release.config.js file",
      "x-prompt": {
        "type": "boolean",
        "message": "\uD83D\uDC0B nx-release: would you like to generate a release config"
      },
      "default": true
    },
    "generateGhActions": {
      "type": "boolean",
      "description": "Generate GitHub workflow files (ci.yml & release.yml)",
      "x-prompt": {
        "type": "boolean",
        "message": "\uD83D\uDC0B nx-release: would you like to generate GitHub workflows?"
      },
      "default": true
    }
  }
}
